<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.hika019.kerkar_university">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ケルカル">
        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />


        <activity android:name=".Setup.LoadActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Setup.SetupActivity">
        </activity>

        <activity android:name=".Setup.Select_university_Activity">
        </activity>

        <activity android:name=".Setup.CreateUniversityActivity"
            android:windowSoftInputMode="adjustResize"
            />

        <activity android:name=".MainActivity">
        </activity>

        <activity android:name=".Create_courceActivity"/>

        <activity android:name=".SelectTimetable.Select_timetableActivity"/>

        <activity android:name=".Timetable.Create_timetableActivity"/>

        <activity android:name=".Course_detail.Course_detail_Activity"/>

        <activity android:name=".Create_task_Activity"/>

        <activity android:name=".select_course.Select_course_Activity"/>

        <activity android:name=".Register_and_Login.Register"/>

        <activity android:name=".Register_and_Login.Login"/>

        <receiver android:name=".Uninstall">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_FULLY_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <category android:name="android.intent.category.LAUNCHER" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

    </application>

</manifest>