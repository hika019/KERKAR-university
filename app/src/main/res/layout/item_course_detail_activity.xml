<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/item_course_detail_task_done_igview"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/outline_task_alt_24" />


    <TextView
        android:id="@+id/item_course_detail_course_name_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:ellipsize="end"
        android:ems="9"
        android:maxLines="1"
        android:text="創造理工学実験"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_course_detail_task_done_igview"
        app:layout_constraintStart_toEndOf="@+id/item_course_detail_task_done_igview"
        app:layout_constraintTop_toTopOf="@+id/item_course_detail_task_done_igview"
        app:layout_constraintVertical_bias="0.521" />

    <TextView
        android:id="@+id/item_course_detail_task_limit_day_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="2021年9月12日"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_course_detail_task_done_igview" />

    <TextView
        android:id="@+id/item_course_detail_task_limit_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:30"
        app:layout_constraintBottom_toBottomOf="@+id/item_course_detail_task_done_igview"
        app:layout_constraintEnd_toEndOf="@+id/item_course_detail_task_limit_day_textview"
        app:layout_constraintTop_toBottomOf="@+id/item_course_detail_task_limit_day_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>