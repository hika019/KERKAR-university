<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"

    android:background="@color/white"
    android:gravity="center">

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/assignment_activity_info_details_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="1"
            android:text="小レポート"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/assignment_activity_info_title_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:text="創造理工学実験"
            android:textSize="14sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_weight="0.8"
            android:gravity="end"
            android:textSize="@dimen/item_textsize" />

        <TextView
            android:id="@+id/assignment_activity_info_day_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_weight="0.8"
            android:gravity="bottom|end"
            android:text="12/24 09:00"
            android:textSize="@dimen/item_textsize" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1" />




</androidx.appcompat.widget.LinearLayoutCompat>