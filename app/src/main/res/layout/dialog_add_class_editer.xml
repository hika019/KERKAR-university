<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/week_to_day_edit_textview"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ems="2"
            android:hint="木"
            android:inputType="textPersonName"
            android:textSize="@dimen/dialog_add_class_textsize"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="31dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="曜日"
            android:textSize="@dimen/dialog_add_class_textsize"
            app:layout_constraintBottom_toBottomOf="@+id/week_to_day_edit_textview"
            app:layout_constraintStart_toEndOf="@+id/week_to_day_edit_textview"
            app:layout_constraintTop_toTopOf="@+id/week_to_day_edit_textview" />

        <EditText
            android:id="@+id/period_edittextview"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:ems="1"
            android:hint="2"
            android:inputType="number"
            android:textSize="@dimen/dialog_add_class_textsize"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="限"
            android:textSize="@dimen/dialog_add_class_textsize"
            app:layout_constraintBottom_toBottomOf="@+id/period_edittextview"
            app:layout_constraintStart_toEndOf="@+id/period_edittextview"
            app:layout_constraintTop_toTopOf="@+id/period_edittextview" />

    </LinearLayout>

    <EditText
        android:id="@+id/lecture_neme_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingStart="8dp"
        android:hint="講義名"
        android:inputType="textPersonName"
        android:textSize="@dimen/dialog_add_class_textsize"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/teacher_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="12"
        android:paddingStart="8dp"
        android:hint="教師名（複数の場合[, ][、]で区切る）"
        android:inputType="textPersonName"
        android:textSize="@dimen/dialog_add_class_textsize"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="163dp" />

    <EditText
        android:id="@+id/class_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingStart="8dp"
        android:hint="教室名"
        android:inputType="textPersonName"
        android:textSize="@dimen/dialog_add_class_textsize"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="221dp" />

</androidx.appcompat.widget.LinearLayoutCompat>